# Configuration d'environnement pour le systÃ¨me MTF
# Copiez ce fichier vers .env.local et ajustez les valeurs

# Temporal Configuration
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_NAMESPACE=default

# Messenger / Logging
MESSENGER_TRANSPORT_DSN=redis://redis:6379/log-messages

# Lock Configuration for Symfony Lock component
LOCK_DSN=flock

# Rate Limiting Configuration
MTF_RATE_LIMIT_CAPACITY=6
MTF_RATE_LIMIT_REFILL_RATE=6
MTF_RATE_LIMIT_REFILL_INTERVAL=1000

# MTF Configuration
MTF_SYMBOLS_TO_WATCH=BTCUSDT,ETHUSDT,ADAUSDT,SOLUSDT,DOTUSDT
MTF_GRACE_WINDOW_MINUTES=4
MTF_MAX_CANDLES_PER_REQUEST=500
MTF_MAX_RETRIES=3

# Logging Configuration
MTF_LOG_LEVEL=info
MTF_LOG_CHANNEL=mtf
ASYNC_LOGGING_ENABLED=1

# Multi-Channel Logging Configuration
LOG_LEVEL_VALIDATION=info
LOG_LEVEL_SIGNALS=info
LOG_LEVEL_POSITIONS=info
LOG_LEVEL_INDICATORS=info
LOG_LEVEL_HIGHCONVICTION=info
LOG_LEVEL_PIPELINE_EXEC=info
LOG_LEVEL_MAIN=info

# Database Configuration
MTF_DB_HOST=localhost
MTF_DB_PORT=5432
MTF_DB_NAME=trading_app
MTF_DB_USER=postgres
MTF_DB_PASSWORD=password

# Cache Configuration
MTF_CACHE_TTL_DEFAULT=3600
MTF_CACHE_TTL_VALIDATION=1800

# Security Configuration
MTF_MAX_CLOCK_DRIFT_SECONDS=3
MTF_SIGNATURE_TIMEOUT_SECONDS=30

# Monitoring Configuration
MTF_METRICS_ENABLED=true
MTF_HEALTH_CHECK_INTERVAL=60


WS_GATEWAY=http://localhost:8082
WS_WORKERS=tradingv3-ws-worker-1:8088,tradingv3-ws-worker-2:8088,tradingv3-ws-worker-3:8088,tradingv3-ws-worker-4:8088,tradingv3-ws-worker-5:8088
WS_WORKER_SHARED_SECRET=change-me

###> symfony/messenger ###
# Choose one of the transports below
# MESSENGER_TRANSPORT_DSN=amqp://guest:guest@localhost:5672/%2f/messages
# MESSENGER_TRANSPORT_DSN=redis://localhost:6379/messages
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
