{% extends 'base.html.twig' %}

{% block title %}Trade Lifecycle Events{% endblock %}

{% block body %}
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="get" class="row g-3 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label">Symbole</label>
                        <input type="text" name="symbol" value="{{ filters.symbol|default('') }}" class="form-control" placeholder="BTCUSDT">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Type d'évènement</label>
                        <input type="text" name="eventType" value="{{ filters.eventType|default('') }}" class="form-control" placeholder="order_submitted">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Side</label>
                        <input type="text" name="side" value="{{ filters.side|default('') }}" class="form-control" placeholder="BUY / SELL">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Run ID</label>
                        <input type="text" name="runId" value="{{ filters.runId|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Order ID</label>
                        <input type="text" name="orderId" value="{{ filters.orderId|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Client Order ID</label>
                        <input type="text" name="clientOrderId" value="{{ filters.clientOrderId|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Plan ID</label>
                        <input type="text" name="planId" value="{{ filters.planId|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Position ID</label>
                        <input type="text" name="positionId" value="{{ filters.positionId|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Timeframe</label>
                        <input type="text" name="timeframe" value="{{ filters.timeframe|default('') }}" class="form-control" placeholder="5m,1h...">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Config profile</label>
                        <input type="text" name="configProfile" value="{{ filters.configProfile|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Config version</label>
                        <input type="text" name="configVersion" value="{{ filters.configVersion|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Exchange</label>
                        <input type="text" name="exchange" value="{{ filters.exchange|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Compte</label>
                        <input type="text" name="accountId" value="{{ filters.accountId|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Reason code</label>
                        <input type="text" name="reasonCode" value="{{ filters.reasonCode|default('') }}" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Limite</label>
                        <input type="number" name="limit" value="{{ limit }}" min="10" max="500" class="form-control">
                    </div>
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-funnel"></i> Filtrer
                        </button>
                        <a href="{{ path('trade_lifecycle_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-counterclockwise"></i> Réinitialiser
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h4 mb-0">
                <i class="bi bi-activity"></i> Derniers évènements ({{ events|length }})
            </h2>
            <span class="text-muted">Triés par date décroissante</span>
        </div>
        <div class="table-responsive">
            <table id="tradeLifecycleTable" class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Happened at (UTC)</th>
                        <th>Symbol</th>
                        <th>Event</th>
                        <th>Side</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Timeframe</th>
                        <th>Plan</th>
                        <th>Run / Order</th>
                        <th>Config</th>
                        <th>Exchange</th>
                        <th>Account</th>
                        <th>Reason</th>
                        <th>Extra</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ event.id }}</td>
                            <td><span class="fw-semibold">{{ event.happenedAt|date('Y-m-d H:i:s') }}</span></td>
                            <td><span class="badge bg-dark">{{ event.symbol }}</span></td>
                            <td><span class="badge bg-info text-dark text-uppercase">{{ event.eventType }}</span></td>
                            <td>
                                {% if event.side %}
                                    <span class="badge {{ event.side == 'BUY' ? 'bg-success' : 'bg-danger' }}">{{ event.side }}</span>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>{{ event.qty ?? '—' }}</td>
                            <td>{{ event.price ?? '—' }}</td>
                            <td>{{ event.timeframe ?? '—' }}</td>
                            <td>
                                {% if event.planId %}
                                    <div class="small fw-semibold">{{ event.planId }}</div>
                                    {% if event.positionId %}
                                        <div class="text-muted small">Pos: {{ event.positionId }}</div>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if event.runId %}
                                    <div class="small text-muted">Run: {{ event.runId }}</div>
                                {% endif %}
                                {% if event.orderId %}
                                    <div class="small">Order: {{ event.orderId }}</div>
                                {% endif %}
                                {% if event.clientOrderId %}
                                    <div class="small">Client: {{ event.clientOrderId }}</div>
                                {% endif %}
                                {% if not event.runId and not event.orderId and not event.clientOrderId %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if event.configProfile or event.configVersion %}
                                    <div>{{ event.configProfile ?? '—' }}</div>
                                    <div class="text-muted small">v{{ event.configVersion ?? 'n/a' }}</div>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>{{ event.exchange ?? '—' }}</td>
                            <td>{{ event.accountId ?? '—' }}</td>
                            <td>{{ event.reasonCode ?? '—' }}</td>
                            <td>
                                {% if event.extra %}
                                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#extra-{{ event.id }}">
                                        <i class="bi bi-code-slash"></i>
                                    </button>
                                    <div class="collapse mt-2" id="extra-{{ event.id }}">
                                        <pre class="bg-dark text-light p-2 small mb-0">{{ event.extra|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                                    </div>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if events is empty %}
            <div class="alert alert-info mt-3 mb-0">
                Aucun évènement trouvé pour ces filtres.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const table = $('#tradeLifecycleTable');
        if (table.length) {
            table.DataTable({
                order: [[0, 'desc']],
                pageLength: 25,
                columnDefs: [
                    { targets: [7, 8, 9, 10, 11, 12, 13, 14], orderable: false }
                ]
            });
        }
    });
</script>
{% endblock %}
