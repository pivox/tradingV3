<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="bi bi-diagram-3"></i> MTF Overview (dernier 4h par contrat)
                </h6>
                <button class="btn btn-sm btn-outline-primary" onclick="loadMtfOverview()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
            <div class="card-body">
                <div id="mtfOverviewLoading" class="text-center" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-2">Chargement de l'overview MTF...</p>
                </div>

                <div id="mtfOverviewResults" style="display: none;"></div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Attendre que DataTables soit complètement chargé
    function waitForDataTables() {
        if (typeof $.fn.DataTable === 'undefined') {
            setTimeout(waitForDataTables, 100);
            return;
        }
        
        // Auto-chargement à l'ouverture de l'onglet si visible
        const tab = document.getElementById('mtf-overview');
        if (tab && tab.classList.contains('active')) {
            loadMtfOverview();
        }

        document.getElementById('mtf-overview-tab')?.addEventListener('shown.bs.tab', function () {
            loadMtfOverview();
        });
    }
    
    waitForDataTables();
});

function loadMtfOverview() {
    $('#mtfOverviewLoading').show();
    $('#mtfOverviewResults').hide();

    $.ajax({
        url: '{{ path("signals_mtf_overview") }}',
        method: 'GET',
        success: function(data) {
            $('#mtfOverviewLoading').hide();
            $('#mtfOverviewResults').html(data).show();
            
            // Initialiser DataTables après le chargement des données avec un petit délai
            setTimeout(function() {
                initializeMtfOverviewTable();
            }, 100);
        },
        error: function(xhr, status, error) {
            $('#mtfOverviewLoading').hide();
            $('#mtfOverviewResults').html(`
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    Erreur lors du chargement de l'overview MTF : ${error}
                </div>
            `).show();
        }
    });
}

function initializeMtfOverviewTable() {
    // Vérifier que jQuery et DataTables sont chargés
    if (typeof $ === 'undefined') {
        console.log('jQuery not loaded yet, retrying...');
        setTimeout(initializeMtfOverviewTable, 100);
        return;
    }
    
    if (typeof $.fn.DataTable === 'undefined') {
        console.log('DataTables not loaded yet, retrying...');
        setTimeout(initializeMtfOverviewTable, 100);
        return;
    }
    
    console.log('Initializing MTF Overview DataTable...');
    
    // Vérifier que le tableau existe
    if ($('#mtfOverviewTable').length === 0) {
        console.log('Table #mtfOverviewTable not found, skipping initialization');
        return;
    }
    
    // Détruire la table DataTables existante si elle existe
    if ($.fn.DataTable.isDataTable('#mtfOverviewTable')) {
        $('#mtfOverviewTable').DataTable().destroy();
        console.log('Destroyed existing DataTable');
    }
    
    // Initialiser DataTables avec configuration personnalisée
    const table = $('#mtfOverviewTable').DataTable({
        "language": {
            "emptyTable": "Aucune donnée disponible dans le tableau",
            "info": "Affichage de _START_ à _END_ sur _TOTAL_ entrées",
            "infoEmpty": "Affichage de 0 à 0 sur 0 entrées",
            "infoFiltered": "(filtré sur _MAX_ entrées au total)",
            "lengthMenu": "Afficher _MENU_ entrées",
            "loadingRecords": "Chargement...",
            "processing": "Traitement en cours...",
            "search": "Rechercher:",
            "zeroRecords": "Aucun enregistrement correspondant trouvé",
            "paginate": {
                "first": "Premier",
                "last": "Dernier",
                "next": "Suivant",
                "previous": "Précédent"
            }
        },
        "pageLength": 25,
        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Tous"]],
        "order": [[0, "asc"]], // Tri par défaut sur la colonne Symbole
        "columnDefs": [
            {
                "targets": [7], // Colonne Actions
                "orderable": false,
                "searchable": false
            }
        ],
        "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
               '<"row"<"col-sm-12"tr>>' +
               '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
        "responsive": true,
        "autoWidth": false
    });
    
    // Ajouter des événements de débogage pour le tri
    table.on('order.dt', function() {
        const order = table.order();
        console.log(`MTF Overview - Tri changé: colonne ${order[0][0]}, direction ${order[0][1]}`);
    });
    
    console.log('MTF Overview DataTable initialized successfully');
}
</script>


