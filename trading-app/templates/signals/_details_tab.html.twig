<!-- Filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-funnel"></i> Filtres
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="filterSymbol" class="form-label">Symbole</label>
                        <input type="text" class="form-control" id="filterSymbol" placeholder="Ex: BTCUSDT">
                    </div>
                    <div class="col-md-2">
                        <label for="filterTf" class="form-label">Timeframe</label>
                        <select class="form-select" id="filterTf">
                            <option value="">Tous</option>
                            <option value="1m">1m</option>
                            <option value="5m">5m</option>
                            <option value="15m">15m</option>
                            <option value="1h">1h</option>
                            <option value="4h">4h</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterSide" class="form-label">Direction</label>
                        <select class="form-select" id="filterSide">
                            <option value="">Tous</option>
                            <option value="LONG">LONG</option>
                            <option value="SHORT">SHORT</option>
                            <option value="NONE">NONE</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterPassed" class="form-label">Statut</label>
                        <select class="form-select" id="filterPassed">
                            <option value="">Tous</option>
                            <option value="true">Passé</option>
                            <option value="false">Non passé</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateFrom" class="form-label">Date Début</label>
                        <input type="date" class="form-control" id="filterDateFrom">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i> Effacer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table des signaux -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Signaux ({{ signals|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="signalsTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Symbole</th>
                                <th>Timeframe</th>
                                <th>Slot Start</th>
                                <th>Direction</th>
                                <th>Score</th>
                                <th>Passé</th>
                                <th>Créé le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for signal in signals %}
                            <tr>
                                <td>
                                    <code>{{ signal.id }}</code>
                                </td>
                                <td>
                                    <strong>{{ signal.symbol }}</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ signal.timeframe.value }}</span>
                                </td>
                                <td>
                                    {{ signal.klineTime|date('d/m/Y H:i:s') }}
                                </td>
                                <td>
                                    {% if signal.side.value == 'LONG' %}
                                        <span class="badge bg-success">LONG</span>
                                    {% elseif signal.side.value == 'SHORT' %}
                                        <span class="badge bg-danger">SHORT</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ signal.side.value }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if signal.score %}
                                        <span class="badge bg-primary">{{ signal.score|number_format(2) }}</span>
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="bi bi-info-circle"></i> Actif
                                    </span>
                                </td>
                                <td>
                                    {{ signal.insertedAt|date('d/m/Y H:i:s') }}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-primary" onclick="viewChart('{{ signal.symbol }}', '{{ signal.timeframe.value }}')" title="Voir graphique">
                                            <i class="bi bi-graph-up"></i>
                                        </button>
                                        <button class="btn btn-outline-info" onclick="viewDetails({{ signal.id }})" title="Voir détails">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        {% if signal.meta %}
                                            <button class="btn btn-outline-secondary" onclick="viewMeta({{ signal.id }})" title="Voir métadonnées">
                                                <i class="bi bi-info-circle"></i>
                                            </button>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Initialisation de DataTables pour le tableau des détails
    $('#signalsTable').DataTable({
        pageLength: 25,
        order: [[7, 'desc']], // Trier par date de création
        columnDefs: [
            { orderable: false, targets: [8] } // Actions column
        ]
    });

    // Filtres
    $('#filterSymbol, #filterTf, #filterSide, #filterPassed, #filterDateFrom').on('change keyup', function() {
        applyFilters();
    });
});

function applyFilters() {
    const table = $('#signalsTable').DataTable();
    const symbol = $('#filterSymbol').val();
    const tf = $('#filterTf').val();
    const side = $('#filterSide').val();
    const passed = $('#filterPassed').val();
    const dateFrom = $('#filterDateFrom').val();

    // Réinitialiser les filtres
    table.search('').columns().search('').draw();

    // Appliquer les filtres
    if (symbol) {
        table.column(1).search(symbol, false, false);
    }
    if (tf) {
        table.column(2).search(tf, false, false);
    }
    if (side) {
        table.column(4).search(side, false, false);
    }
    if (passed) {
        table.column(6).search(passed === 'true' ? 'Oui' : 'Non', false, false);
    }

    table.draw();
}

function clearFilters() {
    $('#filterSymbol, #filterTf, #filterSide, #filterPassed, #filterDateFrom').val('');
    $('#signalsTable').DataTable().search('').columns().search('').draw();
}

function viewChart(symbol, tf) {
    // Rediriger vers les graphiques avec le symbole et timeframe
    window.location.href = '{{ path('graph_index') }}?symbol=' + symbol + '&interval=' + tf;
}

function viewDetails(id) {
    // TODO: Implémenter la vue détaillée du signal
    alert('Vue détaillée pour le signal ' + id);
}

function viewMeta(id) {
    // Récupérer les métadonnées du signal (à implémenter côté serveur)
    // Pour l'instant, on affiche un placeholder
    const metaContent = document.getElementById('metaContent');
    metaContent.textContent = 'Métadonnées pour le signal ' + id + '\n\n' + 
        'Cette fonctionnalité sera implémentée pour afficher les détails techniques du signal.';
    
    const modal = new bootstrap.Modal(document.getElementById('metaModal'));
    modal.show();
}
</script>
