{% extends 'base.html.twig' %}

{% block title %}Switches MTF - Trading{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-arrow-left-right"></i> Switches MTF
            </h1>
            <div>
                <button class="btn btn-primary" onclick="refreshTable()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-funnel"></i> Filtres
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="filterSymbol" class="form-label">Symbole</label>
                        <input type="text" class="form-control" id="filterSymbol" placeholder="Ex: BTCUSDT">
                    </div>
                    <div class="col-md-2">
                        <label for="filterFromTf" class="form-label">Timeframe Source</label>
                        <select class="form-select" id="filterFromTf">
                            <option value="">Tous</option>
                            <option value="1m">1 minute</option>
                            <option value="5m">5 minutes</option>
                            <option value="15m">15 minutes</option>
                            <option value="1h">1 heure</option>
                            <option value="4h">4 heures</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterToTf" class="form-label">Timeframe Cible</label>
                        <select class="form-select" id="filterToTf">
                            <option value="">Tous</option>
                            <option value="1m">1 minute</option>
                            <option value="5m">5 minutes</option>
                            <option value="15m">15 minutes</option>
                            <option value="1h">1 heure</option>
                            <option value="4h">4 heures</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateFrom" class="form-label">Date Début</label>
                        <input type="date" class="form-control" id="filterDateFrom">
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateTo" class="form-label">Date Fin</label>
                        <input type="date" class="form-control" id="filterDateTo">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i> Effacer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table des switches -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Switches MTF ({{ switches|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="switchesTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Symbole</th>
                                <th>Timeframe Source</th>
                                <th>Timeframe Cible</th>
                                <th>Données</th>
                                <th>Créé le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for switch in switches %}
                            <tr>
                                <td>
                                    <code>{{ switch.id }}</code>
                                </td>
                                <td>
                                    <strong>{{ switch.symbol }}</strong>
                                </td>
                                <td>
                                    {% if switch.fromTimeframe == '1m' %}
                                        <span class="badge bg-primary">1m</span>
                                    {% elseif switch.fromTimeframe == '5m' %}
                                        <span class="badge bg-info">5m</span>
                                    {% elseif switch.fromTimeframe == '15m' %}
                                        <span class="badge bg-warning">15m</span>
                                    {% elseif switch.fromTimeframe == '1h' %}
                                        <span class="badge bg-success">1h</span>
                                    {% elseif switch.fromTimeframe == '4h' %}
                                        <span class="badge bg-danger">4h</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ switch.fromTimeframe }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if switch.toTimeframe == '1m' %}
                                        <span class="badge bg-primary">1m</span>
                                    {% elseif switch.toTimeframe == '5m' %}
                                        <span class="badge bg-info">5m</span>
                                    {% elseif switch.toTimeframe == '15m' %}
                                        <span class="badge bg-warning">15m</span>
                                    {% elseif switch.toTimeframe == '1h' %}
                                        <span class="badge bg-success">1h</span>
                                    {% elseif switch.toTimeframe == '4h' %}
                                        <span class="badge bg-danger">4h</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ switch.toTimeframe }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if switch.data and switch.data|length > 0 %}
                                        <button class="btn btn-sm btn-outline-info" onclick="viewData({{ switch.id }})">
                                            <i class="bi bi-eye"></i> Voir
                                        </button>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ switch.createdAt|date('d/m/Y H:i:s') }}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-primary" onclick="viewChart('{{ switch.symbol }}')" title="Voir graphique">
                                            <i class="bi bi-graph-up"></i>
                                        </button>
                                        <button class="btn btn-outline-info" onclick="viewData({{ switch.id }})" title="Voir données">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les données -->
<div class="modal fade" id="dataModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Données du Switch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <pre id="dataContent" class="bg-light p-3"></pre>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    // Initialisation de DataTables
    $('#switchesTable').DataTable({
        pageLength: 25,
        order: [[5, 'desc']], // Trier par date de création
        columnDefs: [
            { orderable: false, targets: [4, 6] } // Données et Actions columns
        ]
    });

    // Filtres
    $('#filterSymbol, #filterFromTf, #filterToTf, #filterDateFrom, #filterDateTo').on('change keyup', function() {
        applyFilters();
    });
});

function applyFilters() {
    const table = $('#switchesTable').DataTable();
    const symbol = $('#filterSymbol').val();
    const fromTf = $('#filterFromTf').val();
    const toTf = $('#filterToTf').val();

    // Réinitialiser les filtres
    table.search('').columns().search('').draw();

    // Appliquer les filtres
    if (symbol) {
        table.column(1).search(symbol, false, false);
    }
    if (fromTf) {
        table.column(2).search(fromTf, false, false);
    }
    if (toTf) {
        table.column(3).search(toTf, false, false);
    }

    table.draw();
}

function clearFilters() {
    $('#filterSymbol, #filterFromTf, #filterToTf, #filterDateFrom, #filterDateTo').val('');
    $('#switchesTable').DataTable().search('').columns().search('').draw();
}

function refreshTable() {
    location.reload();
}

function viewChart(symbol) {
    // Rediriger vers les graphiques avec le symbole
    window.location.href = '{{ path('graph_index') }}?symbol=' + symbol;
}

function viewData(id) {
    // Récupérer les données du switch (à implémenter côté serveur)
    const dataContent = document.getElementById('dataContent');
    dataContent.textContent = 'Données du switch ' + id + '\n\n' + 
        'Cette fonctionnalité sera implémentée pour afficher les données du switch.';
    
    const modal = new bootstrap.Modal(document.getElementById('dataModal'));
    modal.show();
}
</script>
{% endblock %}
