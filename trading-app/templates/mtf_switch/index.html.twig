{% extends 'base.html.twig' %}

{% block title %}Switches MTF - Trading{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-arrow-left-right"></i> Switches MTF
            </h1>
            <div>
                <button class="btn btn-primary" onclick="refreshTable()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-funnel"></i> Filtres
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="filterSymbol" class="form-label">Symbole</label>
                        <input type="text" class="form-control" id="filterSymbol" placeholder="Ex: BTCUSDT">
                    </div>
                    <div class="col-md-2">
                        <label for="filterType" class="form-label">Type</label>
                        <select class="form-select" id="filterType">
                            <option value="">Tous</option>
                            <option value="GLOBAL">Global</option>
                            <option value="SYMBOL">Symbole</option>
                            <option value="SYMBOL_TF">Symbole+TF</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateFrom" class="form-label">Date Début</label>
                        <input type="date" class="form-control" id="filterDateFrom">
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateTo" class="form-label">Date Fin</label>
                        <input type="date" class="form-control" id="filterDateTo">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i> Effacer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table des switches -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Switches MTF
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="switchesTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Clé</th>
                                <th>ON ?</th>
                                <th>Symbole</th>
                                <th>Timeframe</th>
                                <th>Expire le</th>
                                <th>Mis à jour</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les données -->
<div class="modal fade" id="dataModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Données du Switch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <pre id="dataContent" class="bg-light p-3"></pre>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    const table = $('#switchesTable').DataTable({
        processing: true,
        serverSide: true,
        pageLength: 25,
        order: [[6, 'desc']],
        ajax: {
            url: '{{ path('mtf_switches_data') }}',
            data: function(d){
                d.symbol = $('#filterSymbol').val();
                d.type = $('#filterType').val();
            }
        },
        columns: [
            { data: 'id', render: d => `<code>${d}</code>` },
            { data: 'switch_key' },
            { data: 'is_on', render: v => v ? '<span class="badge bg-success">ON</span>' : '<span class="badge bg-danger">OFF</span>' },
            { data: 'symbol', defaultContent: '-' },
            { data: 'timeframe', defaultContent: '-' },
            { data: 'expires_at', defaultContent: '-' },
            { data: 'updated_at', defaultContent: '-' },
            { data: 'description', defaultContent: '-' },
            { data: null, orderable:false, searchable:false, render: function(row){
                const sym = row.symbol || '';
                const graphUrl = sym ? ('{{ path('graph_index') }}' + '?symbol=' + encodeURIComponent(sym)) : '#';
                const disabled = sym ? '' : 'disabled';
                return `<div class="btn-group btn-group-sm" role="group">
                    <a class="btn btn-outline-primary ${disabled}" href="${graphUrl}" title="Voir graphique"><i class="bi bi-graph-up"></i></a>
                </div>`;
            } }
        ],
        columnDefs: [ { orderable: false, targets: [8] } ]
    });

    $('#filterSymbol, #filterType, #filterDateFrom, #filterDateTo').on('change keyup', function(){
        table.ajax.reload();
    });
});

function applyFilters() { $('#switchesTable').DataTable().ajax.reload(); }

function clearFilters() {
    $('#filterSymbol, #filterFromTf, #filterToTf, #filterDateFrom, #filterDateTo').val('');
    $('#switchesTable').DataTable().search('').columns().search('').draw();
}

function refreshTable() {
    location.reload();
}

function viewChart(symbol) {
    // Rediriger vers les graphiques avec le symbole
    window.location.href = '{{ path('graph_index') }}?symbol=' + symbol;
}

function viewData(id) {
    // Récupérer les données du switch (à implémenter côté serveur)
    const dataContent = document.getElementById('dataContent');
    dataContent.textContent = 'Données du switch ' + id + '\n\n' + 
        'Cette fonctionnalité sera implémentée pour afficher les données du switch.';
    
    const modal = new bootstrap.Modal(document.getElementById('dataModal'));
    modal.show();
}
</script>
{% endblock %}
