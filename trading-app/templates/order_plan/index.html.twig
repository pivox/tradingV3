{% extends 'base.html.twig' %}

{% block title %}Plans de Commandes - Trading{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-clipboard-check"></i> Plans de Commandes
            </h1>
            <div>
                <button class="btn btn-primary" onclick="refreshTable()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-funnel"></i> Filtres
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="filterSymbol" class="form-label">Symbole</label>
                        <input type="text" class="form-control" id="filterSymbol" placeholder="Ex: BTCUSDT">
                    </div>
                    <div class="col-md-2">
                        <label for="filterSide" class="form-label">Côté</label>
                        <select class="form-select" id="filterSide">
                            <option value="">Tous</option>
                            <option value="LONG">Long</option>
                            <option value="SHORT">Short</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterStatus" class="form-label">Statut</label>
                        <select class="form-select" id="filterStatus">
                            <option value="">Tous</option>
                            <option value="PLANNED">Planifié</option>
                            <option value="EXECUTED">Exécuté</option>
                            <option value="CANCELLED">Annulé</option>
                            <option value="FAILED">Échoué</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateFrom" class="form-label">Date Début</label>
                        <input type="date" class="form-control" id="filterDateFrom">
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateTo" class="form-label">Date Fin</label>
                        <input type="date" class="form-control" id="filterDateTo">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i> Effacer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistiques -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h5>{{ orderPlans|length }}</h5>
                <small>Total Plans</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>{{ orderPlans|filter(p => p.status == 'PLANNED')|length }}</h5>
                <small>Planifiés</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>{{ orderPlans|filter(p => p.status == 'EXECUTED')|length }}</h5>
                <small>Exécutés</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h5>{{ orderPlans|filter(p => p.status == 'CANCELLED')|length }}</h5>
                <small>Annulés</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h5>{{ orderPlans|filter(p => p.status == 'FAILED')|length }}</h5>
                <small>Échoués</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-secondary text-white">
            <div class="card-body text-center">
                <h5>{{ orderPlans|filter(p => p.side.value == 'LONG')|length }}</h5>
                <small>Long</small>
            </div>
        </div>
    </div>
</div>

<!-- Table des plans de commandes -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Plans de Commandes ({{ orderPlans|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="orderPlansTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Symbole</th>
                                <th>Date Plan</th>
                                <th>Côté</th>
                                <th>Statut</th>
                                <th>Risk JSON</th>
                                <th>Context JSON</th>
                                <th>Exec JSON</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for plan in orderPlans %}
                            <tr>
                                <td>
                                    <code>{{ plan.id }}</code>
                                </td>
                                <td>
                                    <strong>{{ plan.symbol }}</strong>
                                </td>
                                <td>
                                    {{ plan.planTime|date('d/m/Y H:i:s') }}
                                </td>
                                <td>
                                    {% if plan.side.value == 'LONG' %}
                                        <span class="badge bg-success">LONG</span>
                                    {% else %}
                                        <span class="badge bg-danger">SHORT</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if plan.status == 'PLANNED' %}
                                        <span class="badge bg-info">Planifié</span>
                                    {% elseif plan.status == 'EXECUTED' %}
                                        <span class="badge bg-success">Exécuté</span>
                                    {% elseif plan.status == 'CANCELLED' %}
                                        <span class="badge bg-danger">Annulé</span>
                                    {% elseif plan.status == 'FAILED' %}
                                        <span class="badge bg-warning">Échoué</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ plan.status }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if plan.riskJson and plan.riskJson|length > 0 %}
                                        <button class="btn btn-sm btn-outline-info" onclick="viewJson('risk', {{ plan.id }})">
                                            <i class="bi bi-eye"></i> Voir
                                        </button>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if plan.contextJson and plan.contextJson|length > 0 %}
                                        <button class="btn btn-sm btn-outline-info" onclick="viewJson('context', {{ plan.id }})">
                                            <i class="bi bi-eye"></i> Voir
                                        </button>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if plan.execJson and plan.execJson|length > 0 %}
                                        <button class="btn btn-sm btn-outline-info" onclick="viewJson('exec', {{ plan.id }})">
                                            <i class="bi bi-eye"></i> Voir
                                        </button>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-primary" onclick="viewChart('{{ plan.symbol }}')" title="Voir graphique">
                                            <i class="bi bi-graph-up"></i>
                                        </button>
                                        <button class="btn btn-outline-info" onclick="viewDetails({{ plan.id }})" title="Voir détails">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les données JSON -->
<div class="modal fade" id="jsonModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="jsonModalTitle">Données JSON</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <pre id="jsonContent" class="bg-light p-3"></pre>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    // Initialisation de DataTables
    $('#orderPlansTable').DataTable({
        pageLength: 25,
        order: [[2, 'desc']], // Trier par date de plan
        columnDefs: [
            { orderable: false, targets: [5, 6, 7, 8] } // JSON et Actions columns
        ]
    });

    // Filtres
    $('#filterSymbol, #filterSide, #filterStatus, #filterDateFrom, #filterDateTo').on('change keyup', function() {
        applyFilters();
    });
});

function applyFilters() {
    const table = $('#orderPlansTable').DataTable();
    const symbol = $('#filterSymbol').val();
    const side = $('#filterSide').val();
    const status = $('#filterStatus').val();
    const dateFrom = $('#filterDateFrom').val();
    const dateTo = $('#filterDateTo').val();

    // Réinitialiser les filtres
    table.search('').columns().search('').draw();

    // Appliquer les filtres
    if (symbol) {
        table.column(1).search(symbol, false, false);
    }
    if (side) {
        table.column(3).search(side, false, false);
    }
    if (status) {
        table.column(4).search(status, false, false);
    }

    table.draw();
}

function clearFilters() {
    $('#filterSymbol, #filterSide, #filterStatus, #filterDateFrom, #filterDateTo').val('');
    $('#orderPlansTable').DataTable().search('').columns().search('').draw();
}

function refreshTable() {
    location.reload();
}

function viewChart(symbol) {
    // Rediriger vers les graphiques avec le symbole
    window.location.href = '{{ path('graph_index') }}?symbol=' + symbol;
}

function viewDetails(id) {
    // TODO: Implémenter la vue détaillée du plan
    alert('Vue détaillée pour le plan ' + id);
}

function viewJson(type, id) {
    // Récupérer les données JSON du plan (à implémenter côté serveur)
    const modalTitle = document.getElementById('jsonModalTitle');
    const jsonContent = document.getElementById('jsonContent');
    
    modalTitle.textContent = type.charAt(0).toUpperCase() + type.slice(1) + ' JSON - Plan ' + id;
    jsonContent.textContent = 'Données ' + type + ' pour le plan ' + id + '\n\n' + 
        'Cette fonctionnalité sera implémentée pour afficher les données JSON du plan.';
    
    const modal = new bootstrap.Modal(document.getElementById('jsonModal'));
    modal.show();
}
</script>
{% endblock %}
