{% extends 'base.html.twig' %}

{% block title %}Plans de Commandes - Trading{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-clipboard-check"></i> Plans de Commandes
            </h1>
            <div>
                <button class="btn btn-primary" onclick="refreshTable()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-funnel"></i> Filtres
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="filterSymbol" class="form-label">Symbole</label>
                        <input type="text" class="form-control" id="filterSymbol" placeholder="Ex: BTCUSDT">
                    </div>
                    <div class="col-md-2">
                        <label for="filterSide" class="form-label">Côté</label>
                        <select class="form-select" id="filterSide">
                            <option value="">Tous</option>
                            <option value="LONG">Long</option>
                            <option value="SHORT">Short</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterStatus" class="form-label">Statut</label>
                        <select class="form-select" id="filterStatus">
                            <option value="">Tous</option>
                            <option value="PLANNED">Planifié</option>
                            <option value="EXECUTED">Exécuté</option>
                            <option value="CANCELLED">Annulé</option>
                            <option value="FAILED">Échoué</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateFrom" class="form-label">Date Début</label>
                        <input type="date" class="form-control" id="filterDateFrom">
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateTo" class="form-label">Date Fin</label>
                        <input type="date" class="form-control" id="filterDateTo">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i> Effacer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistiques -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h5>{{ kpis.total ?? 0 }}</h5>
                <small>Total Plans</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>{{ kpis.planned ?? 0 }}</h5>
                <small>Planifiés</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>{{ kpis.executed ?? 0 }}</h5>
                <small>Exécutés</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h5>{{ kpis.cancelled ?? 0 }}</h5>
                <small>Annulés</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h5>{{ kpis.failed ?? 0 }}</h5>
                <small>Échoués</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-secondary text-white">
            <div class="card-body text-center">
                <h5>{{ kpis.long ?? 0 }}</h5>
                <small>Long</small>
            </div>
        </div>
    </div>
</div>

<!-- Table des plans de commandes -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Plans de Commandes
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="orderPlansTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Symbole</th>
                                <th>Date Plan</th>
                                <th>Côté</th>
                                <th>Statut</th>
                                <th>Risk JSON</th>
                                <th>Context JSON</th>
                                <th>Exec JSON</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour les données JSON -->
<div class="modal fade" id="jsonModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="jsonModalTitle">Données JSON</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <pre id="jsonContent" class="bg-light p-3"></pre>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    const table = $('#orderPlansTable').DataTable({
        processing: true,
        serverSide: true,
        pageLength: 25,
        order: [[2, 'desc']],
        ajax: {
            url: '{{ path('mtf_order_plans_data') }}',
            data: function(d){
                d.symbol = $('#filterSymbol').val();
                d.side = $('#filterSide').val();
                d.status = $('#filterStatus').val();
                d.date_from = $('#filterDateFrom').val();
                d.date_to = $('#filterDateTo').val();
            }
        },
        columns: [
            { data: 'id', render: d => `<code>${d}</code>` },
            { data: 'symbol', render: d => `<strong>${d}</strong>` },
            { data: 'plan_time' },
            { data: 'side', render: d => d === 'LONG' ? '<span class="badge bg-success">LONG</span>' : '<span class="badge bg-danger">SHORT</span>' },
            { data: 'status', render: function(d){
                if (d === 'PLANNED') return '<span class="badge bg-info">Planifié</span>';
                if (d === 'EXECUTED') return '<span class="badge bg-success">Exécuté</span>';
                if (d === 'CANCELLED') return '<span class="badge bg-danger">Annulé</span>';
                if (d === 'FAILED') return '<span class="badge bg-warning">Échoué</span>';
                return `<span class="badge bg-secondary">${d}</span>`;
            } },
            { data: 'has_risk', orderable:false, searchable:false, render: (v,_,row)=> v ? `<button class="btn btn-sm btn-outline-info" onclick="viewJson('risk', ${row.id})"><i class='bi bi-eye'></i> Voir</button>` : '<span class="text-muted">-</span>' },
            { data: 'has_context', orderable:false, searchable:false, render: (v,_,row)=> v ? `<button class="btn btn-sm btn-outline-info" onclick="viewJson('context', ${row.id})"><i class='bi bi-eye'></i> Voir</button>` : '<span class="text-muted">-</span>' },
            { data: 'has_exec', orderable:false, searchable:false, render: (v,_,row)=> v ? `<button class="btn btn-sm btn-outline-info" onclick="viewJson('exec', ${row.id})"><i class='bi bi-eye'></i> Voir</button>` : '<span class="text-muted">-</span>' },
            { data: null, orderable:false, searchable:false, render: function(row){
                const graphUrl = '{{ path('graph_index') }}' + '?symbol=' + encodeURIComponent(row.symbol);
                return `<div class=\"btn-group btn-group-sm\" role=\"group\">\n                    <a class=\"btn btn-outline-primary\" href=\"${graphUrl}\" title=\"Voir graphique\"><i class=\"bi bi-graph-up\"></i></a>\n                    <button class=\"btn btn-outline-info\" onclick=\"viewDetails(${row.id})\" title=\"Voir détails\"><i class=\"bi bi-eye\"></i></button>\n                </div>`;
            } }
        ],
        columnDefs: [ { orderable: false, targets: [5,6,7,8] } ]
    });

    $('#filterSymbol, #filterSide, #filterStatus, #filterDateFrom, #filterDateTo').on('change keyup', function(){
        table.ajax.reload();
    });
});

function applyFilters() { $('#orderPlansTable').DataTable().ajax.reload(); }

function clearFilters() {
    $('#filterSymbol, #filterSide, #filterStatus, #filterDateFrom, #filterDateTo').val('');
    $('#orderPlansTable').DataTable().search('').columns().search('').draw();
}

function refreshTable() {
    location.reload();
}

function viewChart(symbol) {
    // Rediriger vers les graphiques avec le symbole
    window.location.href = '{{ path('graph_index') }}?symbol=' + symbol;
}

function viewDetails(id) {
    // TODO: Implémenter la vue détaillée du plan
    alert('Vue détaillée pour le plan ' + id);
}

async function viewJson(type, id) {
    const modalTitle = document.getElementById('jsonModalTitle');
    const jsonContent = document.getElementById('jsonContent');
    modalTitle.textContent = type.charAt(0).toUpperCase() + type.slice(1) + ' JSON - Plan ' + id;
    jsonContent.textContent = 'Chargement...';
    try {
        const url = '{{ path('mtf_order_plan_json', {id: 0, type: 'risk'}) }}'.replace('/0/ris', `/${id}/${type}`).replace('risk', type);
        const resp = await fetch(url);
        const payload = await resp.json();
        jsonContent.textContent = JSON.stringify(payload, null, 2);
    } catch (e) {
        jsonContent.textContent = 'Impossible de charger les données.';
    }
    const modal = new bootstrap.Modal(document.getElementById('jsonModal'));
    modal.show();
}
</script>
{% endblock %}
