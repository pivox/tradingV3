{% extends 'base.html.twig' %}

{% block title %}Verrous MTF - Trading{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-lock"></i> Verrous MTF
            </h1>
            <div>
                <div class="form-check form-switch d-inline-block me-3">
                    <input class="form-check-input" type="checkbox" id="autoRefresh" checked>
                    <label class="form-check-label" for="autoRefresh">
                        Actualisation auto (10s)
                    </label>
                </div>
                <button class="btn btn-primary" onclick="refreshTable()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-funnel"></i> Filtres
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label for="filterLockKey" class="form-label">Lock Key</label>
                        <input type="text" class="form-control" id="filterLockKey" placeholder="Ex: mtf_execution">
                    </div>
                    <div class="col-md-3">
                        <label for="filterStatus" class="form-label">Statut</label>
                        <select class="form-select" id="filterStatus">
                            <option value="">Tous</option>
                            <option value="active">Actif</option>
                            <option value="expired">Expiré</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i> Effacer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistiques (optionnel) -->

<!-- Table des verrous -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Verrous MTF
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="locksTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Lock Key</th>
                                <th>Process ID</th>
                                <th>Statut</th>
                                <th>Durée (s)</th>
                                <th>Acquis le</th>
                                <th>Expire le</th>
                                <th>Méta</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
let autoRefreshInterval;

$(document).ready(function() {
    const table = $('#locksTable').DataTable({
        processing: true,
        serverSide: true,
        pageLength: 25,
        order: [[4, 'desc']],
        ajax: {
            url: '{{ path('mtf_locks_data') }}',
            data: function(d){
                d.lock_key = $('#filterLockKey').val();
                d.status = $('#filterStatus').val();
            }
        },
        columns: [
            { data: 'lock_key', render: d => `<code>${d}</code>` },
            { data: 'process_id' },
            { data: 'status', render: function(s){
                if (s === 'active') return '<span class="badge bg-danger">Actif</span>';
                if (s === 'expired') return '<span class="badge bg-warning">Expiré</span>';
                return `<span class=\"badge bg-secondary\">${s}</span>`;
            } },
            { data: 'duration' },
            { data: 'acquired_at' },
            { data: 'expires_at', defaultContent: '-' },
            { data: 'metadata', defaultContent: '-' },
        ]
    });

    $('#filterLockKey, #filterStatus').on('change keyup', function(){ table.ajax.reload(); });

    // Auto-refresh
    $('#autoRefresh').on('change', function() { this.checked ? startAutoRefresh() : stopAutoRefresh(); });
    startAutoRefresh();
});

function applyFilters() { $('#locksTable').DataTable().ajax.reload(); }

function clearFilters() {
    $('#filterLockKey, #filterStatus').val('');
    $('#locksTable').DataTable().ajax.reload();
}

function refreshTable() { $('#locksTable').DataTable().ajax.reload(); }

function startAutoRefresh() {
    if (autoRefreshInterval) {
        clearInterval(autoRefreshInterval);
    }
    autoRefreshInterval = setInterval(function() {
        $('#locksTable').DataTable().ajax.reload(null, false);
    }, 10000); // 10 secondes
}

function stopAutoRefresh() {
    if (autoRefreshInterval) {
        clearInterval(autoRefreshInterval);
        autoRefreshInterval = null;
    }
}

// Nettoyer l'intervalle quand la page se ferme
window.addEventListener('beforeunload', function() {
    stopAutoRefresh();
});
</script>
{% endblock %}
