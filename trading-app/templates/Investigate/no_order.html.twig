{% extends 'base.html.twig' %}

{% block title %}Investigate: No Order{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  .status-badge { font-weight: 600; }
  .status-submitted { background-color: #d1e7dd; color: #0f5132; }
  .status-skipped { background-color: #fff3cd; color: #664d03; }
  .status-error { background-color: #f8d7da; color: #842029; }
  .status-mtf { background-color: #cfe2ff; color: #084298; }
  .status-unknown { background-color: #e2e3e5; color: #41464b; }
</style>
{% endblock %}

{% block body %}
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0"><i class="bi bi-search"></i> Investigate: No Order</h3>
    {% if query.auto_refresh|default(0) > 0 %}
      <span class="badge bg-info">Auto-refresh {{ query.auto_refresh }}s</span>
    {% endif %}
  </div>

  {% if query.auto_refresh|default(0) > 0 %}
    <meta http-equiv="refresh" content="{{ query.auto_refresh }}">
  {% endif %}

  <div class="card mb-4">
    <div class="card-body">
      <form method="get" class="row g-3">
        <div class="col-md-5">
          <label for="symbols" class="form-label">Symboles</label>
          <input type="text" class="form-control" id="symbols" name="symbols" placeholder="SYM1,SYM2" value="{{ query.symbols|e }}">
          <div class="form-text">Ex: 1000RATSUSDT ou GIGGLEUSDT,VELODROMEUSDT</div>
        </div>
        <div class="col-md-2">
          <label for="since_minutes" class="form-label">Depuis (minutes)</label>
          <input type="number" min="1" class="form-control" id="since_minutes" name="since_minutes" value="{{ query.since_minutes|default(10) }}">
        </div>
        <div class="col-md-2">
          <label for="max_log_files" class="form-label">Logs à scanner</label>
          <input type="number" min="1" class="form-control" id="max_log_files" name="max_log_files" value="{{ query.max_log_files|default(2) }}">
        </div>
        <div class="col-md-2">
          <label for="auto_refresh" class="form-label">Auto-refresh (s)</label>
          <input type="number" min="0" class="form-control" id="auto_refresh" name="auto_refresh" value="{{ query.auto_refresh|default(0) }}">
          <div class="form-text">0 pour désactiver</div>
        </div>
        <div class="col-md-1 d-flex align-items-end">
          <button type="submit" class="btn btn-primary w-100"><i class="bi bi-play"></i> Go</button>
        </div>
      </form>
    </div>
  </div>

  {% if error %}
    <div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> {{ error }}</div>
  {% endif %}

  {% if rows is defined and rows is iterable and rows|length > 0 %}
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle" id="investigateTable">
            <thead class="table-light">
            <tr>
              <th>Symbol</th>
              <th>Status</th>
              <th>Reason/Cause</th>
              <th>Order ID</th>
              <th>Decision Key</th>
              <th>TF</th>
              <th>Kline Time</th>
              <th>Zone Dev %</th>
              <th>Max Dev %</th>
              <th>Proposal</th>
            </tr>
            </thead>
            <tbody>
            {% for r in rows %}
              {% set status = r.status|default('unknown') %}
              {% set badgeClass =
                status == 'submitted' ? 'status-submitted' :
                (status == 'skipped' ? 'status-skipped' :
                  (status == 'error' ? 'status-error' : (status == 'mtf_not_ready' ? 'status-mtf' : 'status-unknown')))
              %}
              <tr>
                <td><span class="fw-bold">{{ r.symbol }}</span></td>
                <td><span class="badge status-badge {{ badgeClass }}">{{ status }}</span></td>
                <td>{{ r.reason }}</td>
                <td class="text-nowrap">{{ r.order_id }}</td>
                <td class="text-nowrap"><code>{{ r.decision_key }}</code></td>
                <td>{{ r.timeframe }}</td>
                <td class="text-nowrap">{{ r.kline_time }}</td>
                <td>
                  {% if r.zone_dev_pct is not null %}{{ (r.zone_dev_pct * 100)|number_format(2, '.', ' ') }}%{% endif %}
                </td>
                <td>
                  {% if r.zone_max_dev_pct is not null %}{{ (r.zone_max_dev_pct * 100)|number_format(2, '.', ' ') }}%{% endif %}
                </td>
                <td style="min-width: 260px;">{{ r.proposal }}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    {% block javascripts %}
      {{ parent() }}
      <script>
        $(function() {
          $('#investigateTable').DataTable({
            pageLength: 25,
            order: [],
          });
        });
      </script>
    {% endblock %}
  {% elseif query.symbols %}
    <div class="alert alert-info">Aucun résultat.</div>
  {% endif %}
{% endblock %}

