{% extends 'base.html.twig' %}

{% block title %}Reporting - Symboles MTF{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">
            <i class="bi bi-diagram-3"></i>
            Rapport Symboles (BDD)
        </h1>
    </div>

    <form method="get" class="row g-3 mb-4">
        <div class="col-auto">
            <label for="date" class="form-label">Date (UTC)</label>
            <input type="date" class="form-control" id="date" name="date" value="{{ date }}">
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-arrow-clockwise"></i> Actualiser
            </button>
        </div>
    </form>

    {% include 'reporting/report_alerts.html.twig' with { report: report } %}

    <div class="card">
        <div class="card-body">
            {% if report.output %}
                <pre class="mb-0 text-break">{{ report.output }}</pre>
            {% else %}
                <p class="text-muted mb-0">Aucune donn√©e disponible pour cette date.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
