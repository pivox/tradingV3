# Configuration d'environnement pour le syst√®me MTF
# Copiez ce fichier vers .env.local et ajustez les valeurs

# Temporal Configuration
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_NAMESPACE=default

# BitMart API Configuration
BITMART_API_KEY=your-api-key-here
BITMART_SECRET_KEY=your-secret-key-here
BITMART_API_MEMO=your-api-memo-here
BITMART_BASE_URL=https://api-cloud-v2.bitmart.com
BITMART_WS_URL=wss://ws-manager-compress.bitmart.com/api?protocol=1.1

# Rate Limiting Configuration
MTF_RATE_LIMIT_CAPACITY=6
MTF_RATE_LIMIT_REFILL_RATE=6
MTF_RATE_LIMIT_REFILL_INTERVAL=1000

# MTF Configuration
MTF_GRACE_WINDOW_MINUTES=4
MTF_MAX_CANDLES_PER_REQUEST=500
MTF_MAX_RETRIES=3

# Logging Configuration
MTF_LOG_LEVEL=info
MTF_LOG_CHANNEL=mtf

# Multi-Channel Logging Configuration
LOG_LEVEL_VALIDATION=info
LOG_LEVEL_SIGNALS=info
LOG_LEVEL_POSITIONS=info
LOG_LEVEL_INDICATORS=info
LOG_LEVEL_HIGHCONVICTION=info
LOG_LEVEL_PIPELINE_EXEC=info
LOG_LEVEL_MAIN=info

# Database Configuration
MTF_DB_HOST=localhost
MTF_DB_PORT=5432
MTF_DB_NAME=trading_app
MTF_DB_USER=postgres
MTF_DB_PASSWORD=password

# Cache Configuration
MTF_CACHE_TTL_DEFAULT=3600
MTF_CACHE_TTL_VALIDATION=1800

# Security Configuration
MTF_MAX_CLOCK_DRIFT_SECONDS=3
MTF_SIGNATURE_TIMEOUT_SECONDS=30

# Monitoring Configuration
MTF_METRICS_ENABLED=true
MTF_HEALTH_CHECK_INTERVAL=60



