{% extends 'base.html.twig' %}

{% block title %}Klines - Trading{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-graph-up"></i> Klines (Données OHLCV)
            </h1>
            <div>
                <button class="btn btn-primary" onclick="refreshTable()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-funnel"></i> Filtres
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <label for="filterContract" class="form-label">Contrat</label>
                        <input type="text" class="form-control" id="filterContract" placeholder="Ex: BTCUSDT">
                    </div>
                    <div class="col-md-2">
                        <label for="filterStep" class="form-label">Timeframe</label>
                        <select class="form-select" id="filterStep">
                            <option value="">Tous</option>
                            <option value="60">1m</option>
                            <option value="300">5m</option>
                            <option value="900">15m</option>
                            <option value="3600">1h</option>
                            <option value="14400">4h</option>
                            <option value="86400">1d</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterExchange" class="form-label">Exchange</label>
                        <select class="form-select" id="filterExchange">
                            <option value="">Tous</option>
                            <option value="bitmart">BitMart</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateFrom" class="form-label">Date Début</label>
                        <input type="date" class="form-control" id="filterDateFrom">
                    </div>
                    <div class="col-md-2">
                        <label for="filterDateTo" class="form-label">Date Fin</label>
                        <input type="date" class="form-control" id="filterDateTo">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-outline-secondary" onclick="clearFilters()">
                            <i class="bi bi-x-circle"></i> Effacer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistiques rapides -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h5>{{ stats.total_klines ?? 0 }}</h5>
                <small>Total Klines</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>{{ stats.unique_contracts ?? 0 }}</h5>
                <small>Contrats Uniques</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>{{ stats.latest_date ?? 'N/A' }}</h5>
                <small>Dernière Donnée</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h5>{{ stats.oldest_date ?? 'N/A' }}</h5>
                <small>Première Donnée</small>
            </div>
        </div>
    </div>
</div>

<!-- Table des Klines -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Klines ({{ klines|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="klinesTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Contrat</th>
                                <th>Timeframe</th>
                                <th>Timestamp</th>
                                <th>Open</th>
                                <th>High</th>
                                <th>Low</th>
                                <th>Close</th>
                                <th>Volume</th>
                                <th>Change</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for kline in klines %}
                            <tr>
                                <td>
                                    <code>{{ kline.id }}</code>
                                </td>
                                <td>
                                    <strong>{{ kline.contract.symbol }}</strong>
                                    <br><small class="text-muted">{{ kline.contract.exchange.name }}</small>
                                </td>
                                <td>
                                    {% if kline.step == 60 %}
                                        <span class="badge bg-primary">1m</span>
                                    {% elseif kline.step == 300 %}
                                        <span class="badge bg-info">5m</span>
                                    {% elseif kline.step == 900 %}
                                        <span class="badge bg-success">15m</span>
                                    {% elseif kline.step == 3600 %}
                                        <span class="badge bg-warning">1h</span>
                                    {% elseif kline.step == 14400 %}
                                        <span class="badge bg-danger">4h</span>
                                    {% elseif kline.step == 86400 %}
                                        <span class="badge bg-dark">1d</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ kline.step }}s</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ kline.timestamp|date('d/m/Y H:i:s') }}
                                </td>
                                <td>
                                    <strong>${{ kline.open|number_format(4) }}</strong>
                                </td>
                                <td>
                                    <span class="text-success">${{ kline.high|number_format(4) }}</span>
                                </td>
                                <td>
                                    <span class="text-danger">${{ kline.low|number_format(4) }}</span>
                                </td>
                                <td>
                                    <strong>${{ kline.close|number_format(4) }}</strong>
                                </td>
                                <td>
                                    {{ kline.volume|number_format(2) }}
                                </td>
                                <td>
                                    {% set change = ((kline.close - kline.open) / kline.open * 100) %}
                                    {% if change > 0 %}
                                        <span class="text-success">+{{ change|number_format(2) }}%</span>
                                    {% else %}
                                        <span class="text-danger">{{ change|number_format(2) }}%</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-primary" onclick="viewChart('{{ kline.contract.symbol }}', {{ kline.step }})" title="Voir graphique">
                                            <i class="bi bi-graph-up"></i>
                                        </button>
                                        <button class="btn btn-outline-info" onclick="viewDetails({{ kline.id }})" title="Voir détails">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    // Initialisation de DataTables
    $('#klinesTable').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
        },
        pageLength: 25,
        order: [[3, 'desc']], // Trier par timestamp
        columnDefs: [
            { orderable: false, targets: [10] } // Actions column
        ]
    });

    // Filtres
    $('#filterContract, #filterStep, #filterExchange, #filterDateFrom, #filterDateTo').on('change keyup', function() {
        applyFilters();
    });
});

function applyFilters() {
    const table = $('#klinesTable').DataTable();
    const contract = $('#filterContract').val();
    const step = $('#filterStep').val();
    const exchange = $('#filterExchange').val();
    const dateFrom = $('#filterDateFrom').val();
    const dateTo = $('#filterDateTo').val();

    // Réinitialiser les filtres
    table.search('').columns().search('').draw();

    // Appliquer les filtres
    if (contract) {
        table.column(1).search(contract, false, false);
    }
    if (step) {
        table.column(2).search(step, false, false);
    }
    if (exchange) {
        table.column(1).search(exchange, false, false);
    }

    table.draw();
}

function clearFilters() {
    $('#filterContract, #filterStep, #filterExchange, #filterDateFrom, #filterDateTo').val('');
    $('#klinesTable').DataTable().search('').columns().search('').draw();
}

function refreshTable() {
    location.reload();
}

function viewChart(symbol, step) {
    // Rediriger vers les graphiques avec le symbole et timeframe
    const timeframe = getTimeframeLabel(step);
    window.location.href = '{{ path('graph_index') }}?symbol=' + symbol + '&interval=' + timeframe;
}

function viewDetails(id) {
    // TODO: Implémenter la vue détaillée de la kline
    alert('Vue détaillée pour la kline ' + id);
}

function getTimeframeLabel(step) {
    const timeframes = {
        60: '1m',
        300: '5m',
        900: '15m',
        3600: '1h',
        14400: '4h',
        86400: '1d'
    };
    return timeframes[step] || step + 's';
}
</script>
{% endblock %}
