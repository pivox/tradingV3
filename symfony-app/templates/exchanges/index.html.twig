{% extends 'base.html.twig' %}

{% block title %}Exchanges - Trading{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="bi bi-building"></i> Exchanges
            </h1>
            <div>
                <button class="btn btn-primary" onclick="refreshTable()">
                    <i class="bi bi-arrow-clockwise"></i> Actualiser
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Statistiques rapides -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h5>{{ stats.total_exchanges ?? 0 }}</h5>
                <small>Total Exchanges</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>{{ stats.total_contracts ?? 0 }}</h5>
                <small>Total Contrats</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>{{ stats.avg_contracts_per_exchange ?? 0 }}</h5>
                <small>Moy. Contrats/Exchange</small>
            </div>
        </div>
    </div>
</div>

<!-- Table des exchanges -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-table"></i> Liste des Exchanges ({{ exchanges|length }})
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="exchangesTable" class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Nom</th>
                                <th>Contrats</th>
                                <th>Contrats Trading</th>
                                <th>Contrats Delisted</th>
                                <th>Dernière MAJ</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for exchange in exchanges %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            {% if exchange.name|lower == 'bitmart' %}
                                                <i class="bi bi-currency-bitcoin text-warning fs-4"></i>
                                            {% elseif exchange.name|lower == 'binance' %}
                                                <i class="bi bi-currency-bitcoin text-warning fs-4"></i>
                                            {% else %}
                                                <i class="bi bi-building text-primary fs-4"></i>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <strong>{{ exchange.name|upper }}</strong>
                                            <br><small class="text-muted">Exchange de trading</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary fs-6">{{ exchange.contracts|length }}</span>
                                </td>
                                <td>
                                    {% set tradingCount = exchange.contracts|filter(c => c.status == 'Trading')|length %}
                                    <span class="badge bg-success fs-6">{{ tradingCount }}</span>
                                </td>
                                <td>
                                    {% set delistedCount = exchange.contracts|filter(c => c.status == 'Delisted')|length %}
                                    <span class="badge bg-danger fs-6">{{ delistedCount }}</span>
                                </td>
                                <td>
                                    {% set latestContract = exchange.contracts|sort((a, b) => b.lastAttemptedAt <=> a.lastAttemptedAt)|first %}
                                    {% if latestContract and latestContract.lastAttemptedAt %}
                                        {{ latestContract.lastAttemptedAt|date('d/m/Y H:i') }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button class="btn btn-outline-primary" onclick="viewContracts('{{ exchange.name }}')" title="Voir contrats">
                                            <i class="bi bi-currency-exchange"></i>
                                        </button>
                                        <button class="btn btn-outline-info" onclick="viewDetails('{{ exchange.name }}')" title="Voir détails">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-outline-success" onclick="syncExchange('{{ exchange.name }}')" title="Synchroniser">
                                            <i class="bi bi-arrow-clockwise"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Détails des contrats par exchange -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-pie-chart"></i> Répartition des Contrats par Exchange
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for exchange in exchanges %}
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card border">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="bi bi-building"></i> {{ exchange.name|upper }}
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="text-primary">
                                            <h5>{{ exchange.contracts|length }}</h5>
                                            <small>Total</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-success">
                                            <h5>{{ exchange.contracts|filter(c => c.status == 'Trading')|length }}</h5>
                                            <small>Trading</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="text-danger">
                                            <h5>{{ exchange.contracts|filter(c => c.status == 'Delisted')|length }}</h5>
                                            <small>Delisted</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <div class="progress" style="height: 6px;">
                                        {% set tradingPercent = exchange.contracts|length > 0 ? (exchange.contracts|filter(c => c.status == 'Trading')|length / exchange.contracts|length * 100) : 0 %}
                                        <div class="progress-bar bg-success" style="width: {{ tradingPercent }}%"></div>
                                        <div class="progress-bar bg-danger" style="width: {{ 100 - tradingPercent }}%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    // Initialisation de DataTables
    $('#exchangesTable').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
        },
        pageLength: 10,
        order: [[1, 'desc']], // Trier par nombre de contrats
        columnDefs: [
            { orderable: false, targets: [5] } // Actions column
        ]
    });
});

function refreshTable() {
    location.reload();
}

function viewContracts(exchangeName) {
    // Rediriger vers les contrats avec filtre sur l'exchange
    window.location.href = '{{ path('contracts_index') }}?exchange=' + exchangeName;
}

function viewDetails(exchangeName) {
    // TODO: Implémenter la vue détaillée de l'exchange
    alert('Vue détaillée pour l\'exchange ' + exchangeName);
}

function syncExchange(exchangeName) {
    if (confirm('Êtes-vous sûr de vouloir synchroniser les données de ' + exchangeName + ' ?')) {
        // TODO: Implémenter la synchronisation
        alert('Synchronisation de ' + exchangeName + ' en cours...');
    }
}
</script>
{% endblock %}
